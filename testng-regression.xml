<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="classes" thread-count="5">
<!-- Attach the listener -->
    <listeners>
        <listener class-name="reports.TestListener"/>
    </listeners>

  <test thread-count="5" name="Test">
    <classes>
      <class name="tests.LoginTest"/>
      <class name="tests.DragAndDropTest"/>
      <class name="tests.DropdownTest"/>
      <class name="tests.HoversTest"/>
      <class name="tests.InfiniteScrollTest"/>     
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
